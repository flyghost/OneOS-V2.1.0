config BSP_USING_PIN
    bool "pin"
    select OS_USING_PIN
    default n

config BSP_USING_USART
    bool "usart"
    select OS_USING_SERIAL
    default n
    
    if BSP_USING_USART
        config BSP_USING_USART0
            bool "usart0"
            default n
            
        config BSP_USING_USART1
            bool "usart1"
            default n
            
        config BSP_USING_USART2
            bool "usart2"
            default n
            
        config BSP_USING_UART6
            bool "uart6"
            depends on (SERIES_GD32F4XX || SERIES_GD32F403)
            default n
            
        config BSP_USING_UART7
            bool "uart7"
            depends on (SERIES_GD32F4XX || SERIES_GD32F403)
            default n
    endif

config BSP_USING_I2C
    bool "i2c"
    select OS_USING_I2C
    default n
    
    if BSP_USING_I2C
        config BSP_USING_I2C0
            bool "i2c0"
            default n
            
        config BSP_USING_I2C1
            bool "i2c1"
            default n
    endif

