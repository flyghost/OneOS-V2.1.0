config BSP_USING_GPIO
    bool "Enable GPIO"
    select OS_USING_PIN
    default y

config BSP_USING_LED
    bool "Enable LED"
    select BSP_USING_GPIO
    default y

menuconfig BSP_USING_UART
    bool "Enable UART"
    default y
    select OS_USING_SERIAL
    if BSP_USING_UART
        config BSP_USING_UART1
            bool "UART1 ENABLE"
            default n

        config BSP_USING_UART2
            bool "UART2 ENABLE"
            default n
    endif
    
config BSP_USING_ONCHIP_FLASH
    bool "Enable on-chip FLASH"
    default n

config BSP_USING_SPI
    bool "Enable SPI BUS"
    default n
    select OS_USING_SPI

menuconfig BSP_USING_I2C
    bool "Enable I2C BUS"
    default n
    select OS_USING_I2C
    select OS_USING_PIN
    if BSP_USING_I2C
        config BSP_USING_I2C1
            bool "I2C1 ENABLE"
            default n

        config BSP_USING_I2C2
            bool "I2C2 ENABLE"
            default n
    endif

menuconfig BSP_USING_TIM
    bool "Enable timer"
    default n
    select OS_USING_HWTIMER
    if BSP_USING_TIM
        config BSP_USING_TIM1
            bool "TIM1 ENABLE"
            default n

        config BSP_USING_TIM2
            bool "TIM2 ENABLE"
            default n
    endif
    
config BSP_USING_PWM
    bool "Enable pwm"
    default n
    select OS_USING_PWM

menuconfig BSP_USING_ADC
    bool "Enable ADC"
    default n
    select OS_USING_ADC
    if BSP_USING_ADC
        config BSP_USING_ADC1
            bool "ADC1 ENABLE"
            default n
    endif
    
menuconfig BSP_USING_ONCHIP_RTC
    bool "Enable RTC"
    select OS_USING_RTC
    default n
    if BSP_USING_ONCHIP_RTC
        choice
            prompt "Select clock source"
            default BSP_RTC_USING_LSE

            config BSP_RTC_USING_LSE
                bool "RTC USING LSE"

            config BSP_RTC_USING_LSI
                bool "RTC USING LSI"
        endchoice
    endif
    

config BSP_USING_WDT
    bool "Enable Watchdog Timer"
    select OS_USING_WDT
    default n
    

menuconfig BSP_USING_SDIO
    bool "Enable SDIO"
    select OS_USING_BLOCK
    select OS_USING_SDIO_MM32
    default n
    if BSP_USING_SDIO
        config BSP_USING_SDIO_SD
            bool "mm32 sdio use in sd"
            select OS_USING_SDIO_SD
            default n
        config BSP_USING_SDIO_MMC
            bool "mm32 sdio use in mmc"
            select OS_USING_SDIO_MMC
            default n
        config BSP_USING_SDIO_SDIO
            bool "mm32 sdio use in sdio"
            select OS_USING_SDIO_SDIO
            default n
    endif
    
