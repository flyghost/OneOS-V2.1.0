config BSP_USING_PIN
    bool "pin"
    default n
    
config BSP_USING_UART
    bool "uart"
    default n
    
    if BSP_USING_UART
        config BSP_USING_UART0
            bool "uart0"
            default n
            
        if SOC_NRF52840
            config BSP_USING_UART1
                bool "uart1"
                default n
        endif
    endif
    
    
config BSP_USING_I2C
    bool "i2c"
    default n
    
    if BSP_USING_I2C
        config BSP_USING_I2C0
            bool "i2c0"
            default n
        config BSP_USING_I2C1
            bool "i2c1"
            default n
    endif

