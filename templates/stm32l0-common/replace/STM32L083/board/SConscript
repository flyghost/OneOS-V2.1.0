import os
import osconfig
from build_tools import *

pwd = PresentDir()
LIBS    = []
LIBPATH = []

# add general drivers
src = Split('''
board.c
CubeMX_Config/Core/Src/bsp.c
CubeMX_Config/Core/Src/stm32l0xx_it_bsp.c
CubeMX_Config/Core/Src/stm32l0xx_hal_msp.c
CubeMX_Config/Core/Src/system_stm32l0xx.c
''')

# path   include path in project
path =  [pwd]
path += [pwd + '/CubeMX_Config/Core/Inc']
path += [pwd + '/ports']

if osconfig.CROSS_TOOL == 'gcc':
    src += [pwd + '/startup/startup_stm32l083xx_gcc.s']
elif osconfig.CROSS_TOOL == 'keil':
    src += [pwd + '/startup/startup_stm32l083xx_arm.s']
elif osconfig.CROSS_TOOL == 'iar':
    src += [pwd + '/startup/startup_stm32l083xx_iar.s']

CPPDEFINES = ['STM32L083xx']
group = AddCodeGroup('bsp', src, depend = [''], CPPPATH = path, CPPDEFINES = CPPDEFINES)

Return('group')
